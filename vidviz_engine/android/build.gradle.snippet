android {
    // NDK Configuration for vidviz_engine
    externalNativeBuild {
        cmake {
            path file('src/main/cpp/CMakeLists.txt')
            version '3.22.1'
        }
    }
    
    ndkVersion '25.1.8937393'
    
    defaultConfig {
        externalNativeBuild {
            cmake {
                arguments '-DANDROID=ON','-DANDROID_STL=c++_shared','-DANDROID_PLATFORM=android-24'
                abiFilters 'arm64-v8a', 'armeabi-v7a', 'x86_64'
            }
        }
    }
}
